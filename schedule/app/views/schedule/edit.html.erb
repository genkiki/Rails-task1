<h1>スケジュール編集</h1>
<%= render "shared/error", obj: @record %>
<%= form_for @record, url: "/schedule/#{@record.id}" do |f| %>
<table>
    <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
    </tr>
    <tr>
        <th><%= f.label :start ,"開始日" %></th>
        <td><%= f.date_field :start %></td>
    </tr>
    <tr>
        <th><%= f.label :end ,"終了日" %></th>
        <td><%= f.date_field :end %></td>
    </tr>
    <tr>
        <th><%= f.label :allday ,"終日" %></th>
        <td><%= f.check_box :allday %></td>
    </tr>
    <tr>
        <th><%= f.label :memo ,"メモ" %></th>
        <td><%= f.text_area :memo %></td>
    </tr>
</table>
<%= f.submit "編集完了"%>
<% end %>
<%= link_to "一覧に戻る", :schedule_index %>
